<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-book-author-table" author="Anna">
        <createTable tableName="books_authors">
            <column name="book_info_id" type="bigint">
                <constraints foreignKeyName="book_info_id_fk" references="book_info(id)"/>
            </column>
            <column name="author_id" type="bigint">
                <constraints foreignKeyName="author_id_fk" references="authors(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>