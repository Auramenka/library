<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-review-table" author="Anna">
        <createTable tableName="review">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="user_id_fk" references="users(id)" />
            </column>
            <column name="book_info_id" type="bigint">
                <constraints foreignKeyName="book_info_id_fk" references="book_info(id)" />
            </column>
            <column name="rating" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="varchar(500)"/>
            <column name="created_at" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql>
            ALTER TABLE review ADD CONSTRAINT chk_review_rating CHECK (rating BETWEEN 1 AND 5);
        </sql>
    </changeSet>

</databaseChangeLog>